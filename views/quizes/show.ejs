
		<form method="get" action="/quizes/<%= quiz.id %>/answer">        
			<br></br>
			Pregunta: <%= quiz.pregunta %>
			<br></br>
			<input type"text" name="respuesta" placeholder="Respuesta" id="respuesta"/>
			<input type="submit" value="Enviar" class="btnShow">
		</form>
		
		<div id="divComentarios">
		<p><a href="/quizes/<%= quiz.id %>/comments/new"><button class="btnShow">Nuevo comentario </button></a>
		<p><strong>Comentarios:</strong></p>
		<%for(index in quiz.Comments) {%>
		<% if(quiz.Comments[index].publicado || session.user){%>
			<p>-  <%= quiz.Comments[index].texto%>
			<%if(session.user && !quiz.Comments[index].publicado){%>
			<a href="/quizes/<%=quiz.id
%>/comments/<%=quiz.Comments[index].id%>/publish"><button class="btnPublicar">Publicar</button></a>
				<%}%>				
			</p>
			<%}%>	
		<%}%>		
		</div>
			<br></br><br></br>
